---
import "@/lib/globals.css";
import { ViewTransitions } from "astro:transitions";
import Toaster from "src/components/UI/toaster";
interface Props {
	title: string;
}

const { title } = Astro.props;
// TODO: -add meta data
const metaData = {
	description: "UOS - URLs on steroids, Do more with your URLs!",
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={metaData.description} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<link rel="icon" type="image/png" href="/app-icons/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/app-icons/favicon.svg" />
		<link rel="shortcut icon" href="/app-icons/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/app-icons/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="UOS" />

		<link rel="manifest" href="/site.webmanifest" />

		<!-- TODO: -check if this can cause any problem -->
		<ViewTransitions />

		<meta name="generator" content={Astro.generator} />
		<title>
			{title || "UOS"}
		</title>
	</head>

	<body class="dark bg-background">
		<slot />
		<Toaster client:load />
	</body>
</html>
